{
  "extends": "expo/tsconfig.base",
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@api": [
        "api"
      ],
      "@ui": [
        "components/ui"
      ],
      "@layout": [
        "components/layout"
      ],
      "@icons": [
        "components/icons"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@screens": [
        "screens"
      ],
      "@types": [
        "utils/types"
      ],
      "@enums": [
        "utils/enums"
      ],
      "@navigation": [
        "navigation"
      ],
      "@store": [
        "store"
      ]
    }
  }
}